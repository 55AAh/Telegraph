<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jcp83.telegraph.FindRoomActivity">

    <Button
        android:id="@+id/FindRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="FindRoomButtonClick"
        android:text="@string/FindRoomButtonText"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="6dp"
        android:layout_below="@+id/StartAccepterButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/FoundedRoomsListView"
        android:layout_width="366dp"
        android:layout_height="451dp"
        tools:layout_editor_absoluteX="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_below="@+id/FindRoomButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/FindRoomMessagesBoxScrollView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/StopAccepterButton"
        android:layout_toEndOf="@+id/StopAccepterButton"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp">

        <TextView
            android:id="@+id/FindRoomMessagesBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/FindRoomMessagesBoxText" />
    </ScrollView>

    <Button
        android:id="@+id/StartAccepterButton"
        android:onClick="StartBroadcastSenderAccepterButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StartBroadcastSenderAccepterButtonText"/>

    <Button
        android:id="@+id/StopAccepterButton"
        android:onClick="StopBroadcastSenderAccepterButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/StopBroadcastSenderAccepterButtonText"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/StartAccepterButton"
        android:layout_toEndOf="@+id/StartAccepterButton" />

</RelativeLayout>