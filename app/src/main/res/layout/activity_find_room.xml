<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jcp83.telegraph.FindRoomActivity">

    <ScrollView
        android:id="@+id/FoundedRoomsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/FoundedRoomsTextView"
        android:layout_marginTop="10dp"
        android:fillViewport="true">

        <ListView
            android:id="@+id/FoundedRoomsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <Button
        android:id="@+id/ExitFromFindRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="ExitFromFindRoomButtonClick"
        android:text="@string/ExitFromFindRoomButtonText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/FoundedRoomsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FoundedRoomsTextViewText"
        android:layout_below="@+id/ExitFromFindRoomButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>