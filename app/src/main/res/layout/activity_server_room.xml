<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_server_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jcp83.telegraph.ServerRoomActivity">

    <TextView
        android:text="Сервер"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="33dp"
        android:id="@+id/ServerTextView" />

    <Button
        android:text="Выйти"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ExitFromServerRoomButton"
        android:onClick="ExitFromServerRoomButtonClick"/>

    <TextView
        android:text="Сообщения :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/StartServerConnectorButton"
        android:layout_alignLeft="@+id/ServerTextView"
        android:layout_alignStart="@+id/ServerTextView"
        android:id="@+id/ServerMessagesBox" />

    <Button
        android:text="Запуск\nКоннектора"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:id="@+id/StartServerConnectorButton"
        android:onClick="StartServerConnectorButtonClick"
        android:layout_below="@+id/ExitFromServerRoomButton"
        android:layout_alignRight="@+id/ExitFromServerRoomButton"
        android:layout_alignEnd="@+id/ExitFromServerRoomButton" />

    <Button
        android:text="Остановка\nКоннектора"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StopServerConnectorButton"
        android:onClick="StopServerConnectorButtonClick"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/StartServerConnectorButton"
        android:layout_alignStart="@+id/StartServerConnectorButton" />

    <Button
        android:text="Запуск"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StartServerButton"
        android:onClick="StartServerButtonClick"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/StopServerConnectorButton"
        android:layout_alignEnd="@+id/StopServerConnectorButton"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="24dp" />

</RelativeLayout>
