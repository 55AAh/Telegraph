<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_server_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jcp83.telegraph.ServerRoomActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ServerStatusTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="@string/StartServerButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StartServerButton"
        android:onClick="StartServerButtonClick"
        android:layout_x="227dp"
        android:layout_y="226dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="@string/ServerMessagesBoxText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ServerMessagesBox"
        android:layout_x="43dp"
        android:layout_y="65dp"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/ServerStatusTextView"
        android:layout_toRightOf="@+id/ServerStatusTextView"
        android:layout_toEndOf="@+id/ServerStatusTextView"/>

    <Button
        android:text="@string/ExitFromServerRoomButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ExitFromServerRoomButton"
        android:onClick="ExitFromServerRoomButtonClick"
        android:layout_x="241dp"
        android:layout_y="319dp"
        android:layout_alignTop="@+id/ServerMessagesBox"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="@string/StopServerConnectorButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StopServerConnectorButton"
        android:onClick="StopServerConnectorButtonClick"
        android:layout_x="223dp"
        android:layout_y="95dp"
        android:layout_marginTop="56dp"
        android:layout_below="@+id/ExitFromServerRoomButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:text="@string/StartServerConnectorButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StartServerConnectorButton"
        android:onClick="StartServerConnectorButtonClick"
        android:layout_x="220dp"
        android:layout_y="18dp"
        android:layout_below="@+id/ExitFromServerRoomButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
