<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_server_room"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jcp83.telegraph.ServerRoomActivity">

    <TextView
        android:text="@string/ServerTextViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="33dp"
        android:id="@+id/ServerTextView" />

    <Button
        android:text="@string/StartServerButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StartServerButton"
        android:onClick="StartServerButtonClick"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="24dp"
        android:layout_x="227dp"
        android:layout_y="226dp" />

    <Button
        android:text="@string/StartServerConnectorButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="83dp"
        android:id="@+id/StartServerConnectorButton"
        android:onClick="StartServerConnectorButtonClick"
        android:layout_x="220dp"
        android:layout_y="18dp" />

    <Button
        android:text="@string/StopServerConnectorButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StopServerConnectorButton"
        android:onClick="StopServerConnectorButtonClick"
        android:layout_x="223dp"
        android:layout_y="95dp" />

    <Button
        android:text="@string/ExitFromServerRoomButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:id="@+id/ExitFromServerRoomButton"
        android:onClick="ExitFromServerRoomButtonClick"
        android:layout_x="241dp"
        android:layout_y="319dp" />

    <TextView
        android:text="@string/ServerMessagesBoxText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ServerMessagesBox"
        android:layout_x="43dp"
        android:layout_y="65dp" />

</AbsoluteLayout>
